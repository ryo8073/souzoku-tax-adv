{
  "version": 2,
  "builds": [
    {
      "src": "api/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "inheritance-tax-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "inheritance-tax-frontend/dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "api/main.py"
    },
    {
      "source": "/(.*)",
      "destination": "inheritance-tax-frontend/dist/index.html"
    }
  ]
} 